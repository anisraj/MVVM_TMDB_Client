<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.MainActivity">

    <Button
        android:id="@+id/btn_movies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        android:text="movies"
        app:layout_constraintBottom_toTopOf="@+id/btn_tvShows"
        app:layout_constraintEnd_toEndOf="@+id/btn_tvShows" />

    <Button
        android:id="@+id/btn_tvShows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="292dp"
        android:text="tv shows"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_artists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="105dp"
        android:text="artists"
        app:layout_constraintStart_toStartOf="@+id/btn_tvShows"
        app:layout_constraintTop_toBottomOf="@+id/btn_tvShows" />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>